<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Done:</strong>
  <% if @task.done %>
    <i class="fa fa-check fa-lg" aria-hidden="true"></i>
    <% else %>
    <i class="fa fa-times fa-lg" aria-hidden="true"></i>
  <% end %>
</p>


<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @task.date %>
</p>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
